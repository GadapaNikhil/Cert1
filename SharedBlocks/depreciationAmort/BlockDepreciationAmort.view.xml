<mvc:View
	controllerName="sap.uxap.sample.ObjectPageOnJSON.controller.depreciationAmort.BlockDepreciationAmort"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.m">
	<Table id="idProductsTable"
		inset="false"
		items="{
			path: '/ProductCollection'
		}">
		
		
		<columns>
			<Column
				width="12em">
				<Text text="Year" />
			</Column>
			<Column
				minScreenWidth="Tablet"
				demandPopin="true">
				<Text text="Total Capital Expenditures" />
			</Column>
			<Column
				minScreenWidth="Desktop"
				demandPopin="true"
				hAlign="End">
				<Text text=" In-Kingdom Allowance " />
			</Column>
			<Column
				minScreenWidth="Desktop"
				demandPopin="true"
				hAlign="Center">
				<Text text="2018" />
			</Column>
			<Column
				hAlign="End">
				<Text text="2019" />
			</Column>
			<Column
				hAlign="End">
				<Text text="2020" />
			</Column>
			<Column
				hAlign="End">
				<Text text="2021" />
			</Column>
			<Column
				hAlign="End">
				<Text text="2022" />
			</Column>
			<Column
				hAlign="End">
				<Text text="2023" />
			</Column>
			<Column
				hAlign="End">
				<Text text="2024" />
			</Column>
			<Column
				hAlign="End">
				<Text text="2025" />
			</Column>
		</columns>
		<items>
			<ColumnListItem>
				<cells>
					<ObjectIdentifier
						title="{Name}"/>
					<Text
						text="{ProductId}" />
					<Text
						text="{allowance}" />
					<Text
						text="{2018}" />
					<Text
						text="{2019}" />
					<Text
						text="{2020}" />
					<Text
						text="{2021}" />
					<Text
						text="{2022}" />
					<Text
						text="{2023}" />
					<Text
						text="{2024}" />
					<Text
						text="{2025}" />
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</mvc:View>